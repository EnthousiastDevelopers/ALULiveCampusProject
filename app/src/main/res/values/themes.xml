<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Apps_customTheme" parent="Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/Apps_ActionBarStyle</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>

    </style>
    <style name="Apps_customTheme.NoActionBar" parent="Theme.AppCompat">
        <item name="actionBarStyle">@style/Apps_ActionBarStyle</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Apps_customThemeDialog.NoActionBar" parent="Theme.AppCompat.Dialog">
        <item name="actionBarStyle">@style/Apps_ActionBarStyle</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--WITHOUT INHERITANCE-->
    <style name="customTheme">
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
        <item name="android:windowTitleSize">50dip</item>
        <item name="android:windowTitleStyle">@style/windowTitleStyle</item>
          <item name="actionBarStyle">@style/Apps_ActionBarStyle</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="sis_theme" parent="Theme.AppCompat">
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
        <!--<item name="android:windowTitleBackgroundStyle">@style/Event_WindowTitleBackground</item>-->
        <item name="android:windowTitleSize">50dip</item>
        <item name="android:windowTitleStyle">@style/windowTitleStyle</item>
        <item name="actionBarStyle">@style/Apps_ActionBarStyle</item>
    </style>
    <style name="event_Theme" parent="Theme.AppCompat">
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
        <!--<item name="android:windowTitleBackgroundStyle">@style/Event_WindowTitleBackground</item>-->
        <item name="android:windowTitleSize">50dip</item>
        <item name="android:windowTitleStyle">@style/windowTitleStyle</item>
        <item name="actionBarStyle">@style/Apps_ActionBarStyle</item>
    </style>
    <style name="Transp_Theme" parent="Theme.AppCompat">
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
        <!--<item name="android:windowTitleBackgroundStyle">@style/Transp_WindowTitleBackground</item>-->
        <item name="android:windowTitleSize">50dip</item>
        <item name="android:windowTitleStyle">@style/windowTitleStyle</item>
        <item name="actionBarStyle">@style/Apps_ActionBarStyle</item>
    </style>


</resources>