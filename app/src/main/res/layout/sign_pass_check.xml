<?xml version="1.0" encoding="utf-8"?>
<com.andexert.library.RippleView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/more"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toLeftOf="@+id/more2"
    app:rv_color= "@color/colorRipple_Sign"
    app:rv_zoomDuration = "15"
    android:clickable="false"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="We had sent a verification code. Please check your email:"
        android:textSize="20dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="username\u0040alustudent.com"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/codeET"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_below="@id/email"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:ems="6"
        android:gravity="center"
        android:windowSoftInputMode="adjustResize"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="******"
        android:maxLength="6"
        android:inputType="numberPassword"
        android:textSize="20dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:id="@+id/verify"
        android:layout_gravity="center"
        android:text="Verify"
       android:onClick="onSignPassCheck"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="50dp"
        android:text="2/3" />


    <TextView
        android:id="@+id/textv12"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Enter the code to verify."
        android:textSize="20dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:onClick="onSignPassCheck"
        android:id="@+id/resendcode"
        android:text="Re-send the code" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Already signed?" />


</LinearLayout>
    </com.andexert.library.RippleView>