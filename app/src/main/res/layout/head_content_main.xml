<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgViewheadBubbleStickyIcon"
        android:layout_width="52dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_height="52dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:src="@drawable/ic_logo_new"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/dummyLineLeft"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/imgViewheadBubbleStickyIcon"
        android:background="@color/black_shadow"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/maincontent"
        android:layout_width="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/imgViewheadBubbleStickyIcon"
        android:layout_toRightOf="@id/dummyLineLeft"
        android:background="@drawable/layout_bg_corner">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:text="And remember, you're the best"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <ListView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dummyLineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/maincontent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/imgViewheadBubbleStickyIcon"
        android:background="@color/black_shadow"></RelativeLayout>

</RelativeLayout>
