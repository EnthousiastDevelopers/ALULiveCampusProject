<?xml version="1.0" encoding="utf-8"?>
<com.andexert.library.RippleView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/more"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toLeftOf="@+id/more2"
    app:rv_color= "@color/colorRipple_Sign"
    app:rv_zoomDuration = "15"
    android:clickable="false"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:text="Enter your email address:"
        android:textSize="20dp" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/mailusername"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:windowSoftInputMode="adjustResize"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="10dp"
            android:hint="username"
            android:textSize="20dp" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_toRightOf="@id/mailusername"
            android:id="@+id/spinnerDomain"
            android:gravity="center"
            android:layout_alignBottom="@id/mailusername"
            ></Spinner>
        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="52dp"-->
            <!--android:layout_alignBottom="@id/mailusername"-->
            <!--android:layout_toRightOf="@id/mailusername"-->
            <!--android:gravity="center"-->
            <!--android:id="@+id/domain"-->
            <!--android:text="\u0040alustudent.com"-->
            <!--android:textSize="20dp" />-->
    </RelativeLayout>

    <Button
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:id="@+id/Blogin"
        android:text="Login" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="50dp"
        android:text="1/3" />

    <TextView
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already signed?"/>

</LinearLayout>
    </com.andexert.library.RippleView>