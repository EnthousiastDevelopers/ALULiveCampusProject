<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="6dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/PersonImageView"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:src="@drawable/app_icon_question"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Contact_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:padding="6dp"
                android:text="Test"

                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Contact_bottom_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:paddingLeft="6dp"
                android:text="Test"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"

                android:layout_marginLeft="12dp">

                <TextView
                    android:id="@+id/VoteCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="5"
                    android:textSize="16dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/VoteCountLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/VoteCount"
                    android:text=" Votes"
                    android:textSize="16dp"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/answer_vote_arrows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp">

                <ImageView
                    android:id="@+id/upvoteComment"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_arrow_up" />

                <ImageView
                    android:id="@+id/downvoteComment"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/upvoteComment"
                    android:src="@drawable/ic_arrow_down" />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/Contact_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="25"
            android:textColor="@color/black"
            android:textSize="16dp" />
    </RelativeLayout>

</LinearLayout>