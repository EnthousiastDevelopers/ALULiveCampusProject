<?xml version="1.0" encoding="utf-8"?>

<com.andexert.library.RippleView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/more"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toLeftOf="@+id/more2"
    app:rv_color= "@color/colorRipple_Maint"
    app:rv_zoomDuration = "15"
    android:clickable="false"
    >
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_margin="12dp"
        android:layout_height="fill_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="What is catory of the issue?"
        android:id="@+id/text"
        android:layout_weight="0.56"
        android:autoText="false"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/maintZendeskCategory"

        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Where the issue?"
        android:id="@+id/textView"
        android:layout_weight="0.56"
        android:autoText="false"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:layout_below="@+id/maintZendeskCategory"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/maintZendeskLocation"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Short and specific description of the issue"
        android:id="@+id/textView9"
        android:layout_weight="0.56"
        android:textStyle="bold"
        android:autoText="false"
        android:textSize="25dp"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:layout_below="@+id/maintZendeskLocation"
        android:layout_alignParentStart="true" />


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/maintZendeskDescription"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/maintZendeskSubmit"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/maintZendeskDescription"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
    </ScrollView>
</com.andexert.library.RippleView>