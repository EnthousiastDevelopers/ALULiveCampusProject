<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:paddingBottom="20dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/Contact_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/PersonImageView"
        android:text="Veda"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/PersonImageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="7dp"
        android:gravity=""
        />

    <TextView
        android:id="@+id/Contact_bottom_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Contact_name_tv"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/PersonImageView"
        android:text="Monday 2pm - 5pm"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/botton_tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Contact_bottom_tv"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/PersonImageView"
        android:text="Beau Plan"
        android:textColor="@color/black"
        android:textSize="13sp" />


</RelativeLayout>